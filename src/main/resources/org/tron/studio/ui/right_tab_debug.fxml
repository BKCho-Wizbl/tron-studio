<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXRippler?>
<?import javafx.scene.layout.StackPane?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import javafx.scene.layout.Region?>
<?import com.jfoenix.controls.JFXListView?>

<HBox spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.tron.studio.ui.RightTabDebugController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <VBox spacing="10" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
        <HBox spacing="10" HBox.hgrow="ALWAYS">
            <!--<JFXTextField promptText="Block number" fx:id="blockNumber"/>-->
            <JFXTextField HBox.hgrow="ALWAYS" promptText="Transaction Id" fx:id="transactionIdTextField"/>
        </HBox>
        <HBox spacing="10">
            <Region HBox.hgrow="ALWAYS" />
            <JFXRippler position="BACK" styleClass="icons-rippler1">
                <StackPane style="-fx-padding: 2;">
                    <MaterialDesignIconView glyphName="PLAY" size="2em" styleClass="icon" onMouseClicked="#onClickPlay"/>
                </StackPane>
            </JFXRippler>
            <JFXRippler position="BACK" styleClass="icons-rippler1">
                <StackPane style="-fx-padding: 2;">
                    <MaterialDesignIconView  glyphName="STOP" size="2em" styleClass="icon" onMouseClicked="#onClickStop"/>
                </StackPane>
            </JFXRippler>
            <Region HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox spacing="10">
            <Region HBox.hgrow="ALWAYS" />
            <JFXRippler position="BACK" styleClass="icons-rippler1">
                <StackPane style="-fx-padding: 2;">
                    <MaterialDesignIconView glyphName="STEP_BACKWARD" size="2em" styleClass="icon" onMouseClicked="#onClickStepOverBack"/>
                </StackPane>
            </JFXRippler>
            <JFXRippler position="BACK" styleClass="icons-rippler1">
                <StackPane style="-fx-padding: 2;">
                    <MaterialDesignIconView glyphName="DEBUG_STEP_OUT" size="2em" styleClass="icon" onMouseClicked="#onClickStepBack"/>
                </StackPane>
            </JFXRippler>
            <JFXRippler position="BACK" styleClass="icons-rippler1">
                <StackPane style="-fx-padding: 2;">
                    <MaterialDesignIconView glyphName="DEBUG_STEP_INTO" size="2em" styleClass="icon" onMouseClicked="#onClickStepInto"/>
                </StackPane>
            </JFXRippler>
            <JFXRippler position="BACK" styleClass="icons-rippler1">
                <StackPane style="-fx-padding: 2;">
                    <MaterialDesignIconView glyphName="STEP_FORWARD" size="2em" styleClass="icon" onMouseClicked="#onClickOverForward"/>
                </StackPane>
            </JFXRippler>
            <Region HBox.hgrow="ALWAYS" />
        </HBox>
        <JFXListView VBox.vgrow="ALWAYS" fx:id="debugList" styleClass="jfx-list-view" />
    </VBox>
</HBox>
