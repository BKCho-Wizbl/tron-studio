<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXToolbar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import com.jfoenix.controls.JFXRippler?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:id="titlePane" fx:controller="org.tron.studio.ui.TopController">
    <children>
        <JFXToolbar AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                    AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" >
            <leftItems>
                <Label>Tron Studio</Label>
            </leftItems>
        </JFXToolbar>

        <HBox AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
              AnchorPane.topAnchor="5"
              spacing="10">
            <Region HBox.hgrow="ALWAYS"/>
            <JFXRippler position="FRONT" styleClass="icons-rippler1">
                <StackPane style="-fx-padding: 3;">
                    <MaterialDesignIconView glyphName="WINDOW_MINIMIZE" styleClass="icon-top" onMouseClicked="#onClickMin"/>
                </StackPane>
            </JFXRippler>
            <JFXRippler position="FRONT" styleClass="icons-rippler1">
                <StackPane style="-fx-padding: 3;">
                    <MaterialDesignIconView glyphName="WINDOW_MAXIMIZE" styleClass="icon-top" onMouseClicked="#onClickMax"/>
                </StackPane>
            </JFXRippler>
            <JFXRippler position="FRONT" styleClass="icons-rippler1">
                <StackPane style="-fx-padding: 3;">
                    <MaterialDesignIconView glyphName="WINDOW_CLOSE" styleClass="icon-top" onMouseClicked="#onClickClose"/>
                </StackPane>
            </JFXRippler>
            <Region prefWidth="2"/>
        </HBox>
    </children>
</AnchorPane>
