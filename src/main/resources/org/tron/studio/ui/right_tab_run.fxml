<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Region?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXRippler?>
<?import javafx.scene.layout.StackPane?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<VBox spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.tron.studio.ui.RightTabRunController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <GridPane hgap="5" vgap="5">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" prefWidth="90.0"/>
            <ColumnConstraints hgrow="SOMETIMES" prefWidth="110.0"/>
        </columnConstraints>
        <Label text="Environment"     GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label text="Account"         GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label text="Fee Limit"       GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label text="Value"           GridPane.rowIndex="3" GridPane.columnIndex="0"/>

        <JFXComboBox  fx:id="environmentComboBox" HBox.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.columnSpan="2"/>
        <JFXComboBox  fx:id="accountComboBox"     HBox.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="2"/>
        <JFXTextField fx:id="feeLimitTextField"   HBox.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="2"/>
        <JFXTextField fx:id="valueTextField"      HBox.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.columnSpan="1"/>
        <JFXComboBox  fx:id="unitComboBox"        HBox.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.columnIndex="2" GridPane.columnSpan="1"/>

        <JFXRippler position="BACK" styleClass="icons-rippler1" GridPane.rowIndex="1" GridPane.columnIndex="3" GridPane.columnSpan="1">
            <StackPane style="-fx-padding: 2;">
                <MaterialDesignIconView glyphName="CONTENT_COPY" styleClass="icon" onMouseClicked="#onClickCopyAddress"/>
            </StackPane>
        </JFXRippler>
        <JFXRippler position="BACK" styleClass="icons-rippler1" GridPane.rowIndex="1" GridPane.columnIndex="4" GridPane.columnSpan="1">
            <StackPane style="-fx-padding: 2;">
                <MaterialDesignIconView glyphName="PLUS_BOX" styleClass="icon" onMouseClicked="#onClickAddAddress"/>
            </StackPane>
        </JFXRippler>
    </GridPane>
    <Region prefHeight="20"/>
    <VBox spacing="10">
        <JFXComboBox fx:id="contractComboBox" VBox.vgrow="ALWAYS"/>
        <HBox spacing="10">
            <JFXButton    styleClass="custom-jfx-button-raised" text="Deploy" onAction="#onClickDeploy" HBox.hgrow="ALWAYS"/>
            <JFXTextField promptText="constructure parameters" HBox.hgrow="ALWAYS"/>
        </HBox>
        <HBox spacing="10">
            <JFXTextField promptText="Load contract from address" HBox.hgrow="ALWAYS"/>
            <JFXButton styleClass="custom-jfx-button-raised"    text="Load" onAction="#onClickLoad" HBox.hgrow="ALWAYS"/>
        </HBox>
    </VBox>
    <Region prefHeight="20"/>
    <VBox spacing="10">
        <HBox spacing="10">
            <Label  text="Deployed Contracts" />
            <Region HBox.hgrow="ALWAYS"/>
            <JFXButton styleClass="custom-jfx-button-raised" text="Clear" onAction="#onClickClear" HBox.hgrow="ALWAYS"/>
        </HBox>

    </VBox>
</VBox>
